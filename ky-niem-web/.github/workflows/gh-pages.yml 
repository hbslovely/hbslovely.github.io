name: GitHub Pages

on:
  push:
    branches:
    - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout
      uses: actions/checkout@v2

    - name: Setup Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '23'

    - name: Install dependencies
      run: npm install

    - name: Build
      run: npm run build:prod

    - name: Deploy
      if: success()
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: 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
        publish_dir: dist/angular-github-actions
        enable_jekyll: true
